<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net5.0-windows;net472</TargetFrameworks>
	<UseWindowsForms>true</UseWindowsForms>
    <UseWPF>true</UseWPF>
    <Version>1.1.26</Version>
    <Authors>SuRGeoNix</Authors>
    <Copyright>SuRGeoNix © 2022</Copyright>
    <PackageLicenseExpression>LGPL-3.0-or-later</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/SuRGeoNix/Flyleaf</PackageProjectUrl>
    <PackageIcon>Flyleaf.png</PackageIcon>
    <PackageIconUrl />
    <PackageTags>flyleaf flyleaflib video audio media player element control</PackageTags>
    <Description>WPF Media Player Control/Element (based on FlyleafLib)</Description>
    <PackageReleaseNotes>
		* Fixes UIConfig to properly save for subtitles FontWeight, FontStyle and FontStretch
		* Updates FlyleafLib
	</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Dragablz" Version="0.0.3.223" />
    <PackageReference Include="MaterialDesignColors" Version="2.0.5-ci45" />
    <PackageReference Include="MaterialDesignThemes" Version="4.4.0-ci45" />
    <PackageReference Include="System.Runtime.CompilerServices.Unsafe" Version="6.0.0" />
    <PackageReference Include="WpfColorFontDialog" Version="1.0.8" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\Images\Flyleaf.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\FlyleafLib\FlyleafLib.csproj" />
  </ItemGroup>

</Project>
